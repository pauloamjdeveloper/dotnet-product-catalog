@model ProductCatalog.Application.DTOs.ProductDTO

<h2 class="subtitle-page">Adicionar novo produto</h2>

<form asp-action="Create">

    <div class="form-horizontal">

        <hr />

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label">Nome</label>
            <div class="col-md-4">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label">Descrição</label>
            <div class="col-md-4">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Image" class="col-md-2 control-label">Imagem</label>
            <div class="col-md-4">
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="col-md-2 control-label">Preço</label>
            <div class="col-md-4">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Stock" class="col-md-2 control-label">Estoque</label>
            <div class="col-md-4">
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <label asp-for="CategoryId" class="col-md-2 control-label">Categoria</label>
            <div class="col-md-4">
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"> </select>
            </div>
        </div>

        <div class="form-group mt-2">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" value="Adicionar" class="btn button-sucess">
                    <i class="fa-solid fa-floppy-disk"></i>
                </button> |
                <a asp-action="Index" class="btn button-return"><i class="fa-solid fa-arrow-left"></i></a>
            </div>
        </div>
    </div>
</form>