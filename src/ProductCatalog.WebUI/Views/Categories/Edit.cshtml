@model ProductCatalog.Application.DTOs.CategoryDTO

<h3 class="subtitle-page">Editar Categoria</h3>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="Name" class="control-label input-text">Nome</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <button type="submit" value="Salvar" title="Salvar" class="btn button-sucess">
                    <i class="fa-solid fa-floppy-disk"></i>
                </button> |
                <a asp-action="Index" title="Retornar ao Lista" class="btn button-return">
                    <i class="fa-solid fa-arrow-left"></i>
                </a>
            </div>
        </form>

    </div>
</div>