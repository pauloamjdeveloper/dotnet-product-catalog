@model ProductCatalog.Application.DTOs.CategoryDTO

<h3>Excluir Categoria</h3>

<h4>Tem certeza de que deseja excluir isso?</h4>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Retornar a Lista</a>
    </form>
</div>