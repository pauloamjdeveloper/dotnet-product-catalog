@model ProductCatalog.Application.DTOs.CategoryDTO

<h3 class="subtitle-page">Excluir Categoria</h3>

<h4 class="title-delete">Tem certeza de que deseja excluir isso?</h4>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" title="Excluir" class="btn button-delete">
            <i class="fa-solid fa-trash-can"></i>
        </button> | 
        <a asp-action="Index" title="Retornar ao Lista" class="btn button-return">
            <i class="fa-solid fa-arrow-left"></i>
        </a>
    </form>
</div>